				parsing/utils4.c	\
				parsing/utils5.c	\
				parsing/utils6.c	\
				parsing/utils7.c	\
				parsing/free.c		\

OBJS		=	$(SRCS:%c=%o)

CC			=	gcc
CFLAGS		=	-g -Wall -Wextra -Werror -fsanitize=address
RM			=	rm -rf

all:		$(NAME)
